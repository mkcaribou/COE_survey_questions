        function getQuestions() {
            const supportType = document.getElementById('supportType').value;
            const outcome = document.getElementById('outcome').value;
            const questionList = document.getElementById('questionList');
            
            let tableHTML = `
                <table id="questionTable">
                    <tr>
                        <th>Survey Question</th>
                        <th>Answer Options</th>
                        <th>Form of Support</th>
                        <th>Outcome</th>
                    </tr>
            `;
            
            let hasQuestions = false;

            for (let support in questions) {
                if (supportType && support !== supportType) continue;
                
                for (let outc in questions[support]) {
                    if (outcome && outc !== outcome) continue;
                    
                    questions[support][outc].forEach(q => {
                        hasQuestions = true;
                        tableHTML += `
                            <tr>
                                <td>${q.question}</td>
                                <td>${q.options.join(", ")}</td>
                                <td>${support.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase())}</td>
                                <td>${outc.charAt(0).toUpperCase() + outc.slice(1)}</td>
                            </tr>
                        `;
                    });
                }
            }
            
            tableHTML += '</table>';
            
            if (hasQuestions) {
                questionList.innerHTML = tableHTML;
            } else {
                questionList.innerHTML = '<p>No questions found for the selected criteria. Please adjust your selection.</p>';
            }
        }
    </script>
